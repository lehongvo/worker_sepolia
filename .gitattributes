# Auto detect text files and perform LF normalization
* text=auto

# Solidity files
*.sol linguist-language=Solidity

# JavaScript/TypeScript
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
